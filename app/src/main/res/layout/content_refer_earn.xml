<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_refer_earn"
    tools:context="info.androidhive.materialdesign.activity.ReferEarnAct"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <ImageView
            android:id="@+id/ref_earn_image1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/refer_earn_group"
            android:layout_weight="2"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/t1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=" Invite a friend they get Rs.100."
            android:typeface="sans"
            android:layout_weight="0.32"
            android:visibility="visible" />
        <TextView
            android:id="@+id/t2"
            android:gravity="center"
            android:layout_below="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"
            android:text="After They placing the order,you get Rs.100"/>
        <TextView
            android:id="@+id/t3"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.32"
            android:layout_below="@+id/t2"
            android:text="Your fefferel code is:"
            />
        <TextView
            android:gravity="center"
            android:layout_below="@id/t3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="PRAS2KU"
            android:textSize="@dimen/pad_30dp"
            android:textColor="@color/orange_theme"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/invite_frnds"
            android:textAllCaps="false"
            android:gravity="center"
            android:background="@drawable/rounded_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       Invite Friends       "
            android:textColor="@color/white"
            />

    </LinearLayout>
</LinearLayout>
