<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/pad_15dp"
    android:background="@color/background"
    android:paddingBottom="@dimen/pad_15dp"
    android:paddingTop="@dimen/pad_5dp"
    android:weightSum="1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Classic"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/cart_item_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/orange_theme"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mariyo TIkko tipai"
        android:textSize="@dimen/txt_15sp"
        android:id="@+id/cart_item_meal_name"
        android:layout_below="@+id/cart_item_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:layout_toRightOf="@+id/cart_item_meal_name"
        android:layout_toEndOf="@+id/cart_item_meal_name"
        android:layout_below="@+id/cart_item_type"
        android:id="@+id/cart_item_price_block"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Rs"
            android:gravity="right"
            android:textSize="15sp"
            android:textColor="@color/black"
            />
        <TextView
            android:paddingLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="300/-"
            android:id="@+id/cart_item_meal_price"
            android:gravity="right"
            android:layout_gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/cart_item_price_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quantity_plus_minus"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <Button
            android:id="@+id/cart_item_btn_minus"
            style="@style/btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/minus_box" />
        <TextView
            android:id="@+id/cart_item_quanity"
            android:layout_width="22dp"
            android:layout_marginLeft="@dimen/pad_3dp"
            android:layout_marginRight="@dimen/pad_3dp"
            android:layout_height="22dp"
            android:gravity="center"
            android:background="@drawable/number_box"
            android:text="1"
            android:textColor="@color/main_color_gray_dk"
            />
        <Button
            android:id="@+id/cart_item_btn_plus"
            style="@style/btn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/plus_box" />
    </LinearLayout>
<RelativeLayout
    android:paddingTop="@dimen/pad_3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cart_item_meal_name">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/veg_nonveg_icon"
        android:src="@drawable/veg_icon"
        />
    <TextView
        android:paddingLeft="@dimen/pad_5dp"
        android:layout_toEndOf="@+id/veg_nonveg_icon"
        android:layout_toRightOf="@+id/veg_nonveg_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Veg"
        android:textSize="@dimen/txt_15sp"
        android:gravity="top"
        android:id="@+id/cart_item_meal_type"
        android:textColor="@color/gray_light"
         />


</RelativeLayout>
</RelativeLayout>