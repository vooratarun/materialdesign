<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_map_vans"
    tools:context="info.androidhive.materialdesign.activity.MapVansActivity"
    android:orientation="vertical"
    android:id="@+id/root">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
           />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:layout_above="@+id/taus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange_theme"
            android:id="@+id/layout_full_menu"
            android:layout_weight="1"
           android:clickable="true"
            >
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Menu"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:id="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:id="@+id/first_layout">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/full_menu_dishes1"
                android:text="105"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="55"
                android:textSize="15sp"
                android:id="@+id/full_menu_price2"
                android:layout_below="@+id/textView6"
                android:textColor="@color/white"
                android:layout_weight="1"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dishes"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:id="@+id/textView3"
            android:gravity="center"
            android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="StartsAt"
                android:textSize="10dp"
                android:layout_weight="1"
                />
    </LinearLayout>

            <ImageView
                android:id="@+id/image_min_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dish"
                android:adjustViewBounds="true"
                android:paddingLeft="10dp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/orange_theme"
            android:id="@+id/layout_minute_menu"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minute Menu"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:id="@+id/mintext"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mintext"
                android:id="@+id/first_layout1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/minute_menu_dishes"
                    android:text="105"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="55"
                    android:textSize="15sp"
                    android:id="@+id/minute_menu_price"
                    android:layout_below="@+id/mintext"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_layout1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dishes"
                    android:textSize="10dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="StartsAt"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dish"
                android:adjustViewBounds="true"
                android:paddingLeft="10dp"
                android:visibility="invisible"
                />
        </RelativeLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/taus"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/map"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:paddingTop="@dimen/pad_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buttons"
            android:paddingBottom="@dimen/pad_10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:adjustViewBounds="true"
                    android:id="@+id/slideButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/veg_non_veg_filter"
                    android:onClick="slideUpDown"
                    android:background="@color/white"
                    android:clickable="true"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/veg_text"
                    android:text="Veg"
                    android:textSize="10sp"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:clickable="true"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:background="@color/white"
                    android:id="@+id/slideButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_restaraunt"
                    android:onClick="slideUpDown2"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_text"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:text="@string/filter_home_rest"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:clickable="true"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:background="@color/white"
                    android:id="@+id/slideButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cuisine_icon"
                    android:onClick="slideUpDown3"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_cuisine"
                    android:id="@+id/cuis_text"
                    android:textSize="10sp"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:clickable="true"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:background="@color/white"
                    android:id="@+id/slideButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/reset_icon"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/reset_text"
                    android:gravity="center"
                    android:text="@string/filter_reset"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


